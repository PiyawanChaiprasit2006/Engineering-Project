<head><title>Servo Control</title></head>
<body>
  <button onclick="send('up')">Up</button>
  <button onclick="send('down')">Down</button>
  <script>
    function send(direction) {
      fetch("http://<RASPBERRY_PI_IP>:5000/move/" + direction, {
        method: "POST"
      });
    }
  </script>
</body>
